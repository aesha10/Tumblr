<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label :name %> <br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %> <br>
    <%= f.text_area :body, :class => "form-control"%>
  </div>
  <button class="btn btn-primary" >Save Comments
    <% f.submit %>
  </button>
<% end %>